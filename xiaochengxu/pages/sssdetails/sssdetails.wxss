.title{
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #333;
  text-align: center;
  display: block;
}
.hui{
  height: 10px;
  background-color: #f7f7f7;
  margin-bottom: 20px;
}
.box{
  width: 95%;
  margin: 0 auto 30px;
  overflow: hidden;
  zoom:1;
  background-color: #b8f7f7;
  padding: 30px 0;
  border-radius: 5px;
}
img{

  text-align: center;
}

.box text{
  display: block;
  overflow: hidden;
  zoom:1;
  font-size: 12px;
  color: #333;
  line-height: 25px;
  text-indent: 2rem;
  width: 90%;
  margin: 0 auto;
}
.box image{
  display: block;
  width: 100px;
  height: 100px;
  padding: 30px;
  background-color: #13e5de;
  margin: 10px auto;
}
.box .di{
  text-indent: 0;
  text-align: center;
}