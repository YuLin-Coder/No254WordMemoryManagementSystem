
/* pages/boy_about/boy_about.wxss */
.title{
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #333;
  text-align: center;
  display: block;
}
.shijian{
  height: 40px;
  line-height: 40px;
  font-size: 12px;
  color: #333;
  text-align: center;
  display: block;
}
.hui{
  height: 10px;
  background-color: #f7f7f7;
  margin-bottom: 20px;
}
.box{
  width: 95%;
  margin: 0 auto 30px;
  overflow: hidden;
  zoom:1;
  background-color: #b8f7f7;
  padding: 30px 0;
  border-radius: 5px;
}
.box text{
  display: block;
  overflow: hidden;
  zoom:1;
  font-size: 12px;
  color: #333;
  line-height: 25px;
  text-indent: 2rem;
  width: 90%;
  margin: 0 auto;
}
.box image{
  display: block;
  width: 100px;
  height: 100px;
  padding: 30px;
  background-color: #13e5de;
  margin: 10px auto;
}
.box .di{
  text-indent: 0;
  text-align: center;
}
form{
  display: block;
  width: 96%;
  height: auto;
  position: relative;
  margin: 0 auto 40px;
  padding: 30px 0;
  border-radius: 5px;
  overflow: hidden;zoom:1;
}
form .bg{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -99;
}

form .add{
  display: block;
  width: 40px;
  height:40px;
 
  z-index: -99;
}

form .tp{
  overflow: hidden;
  zoom:1;
  width: 60%;
  margin: 0 auto 20px;
}
form .tp image{
  float: left;
  width: 50px;
}
form .tp image.girl{
  float: right;
  width: 60px;
}
form .radio_k{
  width:47%;
  margin: 0 auto -10px 0px;
  overflow: hidden;
  zoom:1;
}
form .radio_k label{
  float: left;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
}
form .radio_k label.la2{
  float: right;
}
form .hang{
  overflow: hidden;
  zoom:1;
  width:90%;
  margin: 0 auto 10px;
}
form .hang .z{
  float: left;
  width: 80px;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #333;
}
form .hang input{
  float: left;
  width: 50%;
  height: 38px;
  line-height: 38px;
  padding: 0 5px;
  border: 1px solid #13e6e6;
  border-radius: 5px;
  background-color: #fff;
  font-size: 14px;
  color: #333;
}
form .hang .z text{
  opacity: 0;
}
form .hang .y{
  float: right;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #333;
}
form .hang .x{
  float: left;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #333;
  margin-left:8px;
 
}
form .hang .xx{
  float: left;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #333;
   margin-left:8px;
}

form .but{
  display: block;
  width: 80%;
  height: 45px;
  line-height: 45px;
  margin: 0 auto;
  position: relative;
  border-radius: 25px;
  overflow: hidden;
  zoom:1;
  margin-top: 30px;
}
form .but text{
  position: relative;
  z-index: 100;
}
form .but image{
  width: 100%;
  height: 45px;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 99;
}
form .but button{
  display: block;
  width: 100%;
  height: 45px;
  line-height: 45px;
  background: none;
  text-align: center;
  font-size: 16px;
 
  color: #fff;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
  border: none;

}